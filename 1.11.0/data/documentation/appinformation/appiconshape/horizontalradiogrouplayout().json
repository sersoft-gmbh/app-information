            "struct HorizontalRadioGroupLayout: View {",
            "    @State private var selected = 1",
            "    var body: some View {",
            "        VStack(spacing: 20) {",
            "            Picker(selection: $selected, label: Text(\"Favorite Color\")) {",
            "                Text(\"Red\").tag(1)",
            "                Text(\"Green\").tag(2)",
            "                Text(\"Blue\").tag(3)",
            "                Text(\"Other\").tag(4)",
            "            }",
